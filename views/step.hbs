<main class="step">
    <a href="/">
        <img class="icon" src="/public/assets/icons/back.svg" alt="">
    </a>

    <section class="center">
        <h1>Hello {{info.firstname}} what are your fitness goals?</h1>
        <div class="button-container">
            <form action="#">
                <div>
                    {{#each goals}}
                        <input type="checkbox" id="{{title}}" name="{{title}}" value="{{_id}}">
                        <label class="fitness" for="{{title}}">{{title}}</label>
                    {{/each}}
                </div>
                <div>
                    <input type="submit" value="Continue">
                </div>

            </form>
        </div>
    </section>
</main>